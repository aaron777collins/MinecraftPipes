namespace "pipes"

# ===== EXAMPLE USAGE FUNCTIONS =====
function "example_setup":
    # Example setup for a basic pipe system
    tellraw @s [{"text":"=== PIPE SYSTEM EXAMPLE SETUP ===","color":"gold"}]
    tellraw @s [{"text":"1. Place a chest with items","color":"aqua"}]
    tellraw @s [{"text":"2. Run: /function pipes:create_source","color":"yellow"}]
    tellraw @s [{"text":"3. Place another chest for receiving","color":"aqua"}]
    tellraw @s [{"text":"4. Run: /function pipes:create_sink","color":"yellow"}]
    tellraw @s [{"text":"5. Watch items flow through pipes!","color":"green"}]

function "example_advanced_setup":
    # Example setup for advanced features
    tellraw @s [{"text":"=== ADVANCED PIPE SETUP ===","color":"gold"}]
    tellraw @s [{"text":"1. Create smart source: /function pipes:create_smart_source","color":"aqua"}]
