function "example_chest_to_chest":
    # Complete example: chest to chest transfer
    tellraw @s [{"text":"=== CHEST TO CHEST EXAMPLE ===","color":"gold"}]
    tellraw @s [{"text":"Step 1: Place source chest with iron ingots","color":"aqua"}]
    tellraw @s [{"text":"Step 2: Stand on the chest and run:","color":"aqua"}]
    tellraw @s [{"text":"  /function pipes:create_source","color":"yellow"}]
    tellraw @s [{"text":"Step 3: Place destination chest 10 blocks away","color":"aqua"}]
    tellraw @s [{"text":"Step 4: Stand on destination chest and run:","color":"aqua"}]
    tellraw @s [{"text":"  /function pipes:create_sink","color":"yellow"}]
    tellraw @s [{"text":"Step 5: Watch iron ingots flow through the air!","color":"green"}]

