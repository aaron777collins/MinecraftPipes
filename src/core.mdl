pack "Minecraft Pipes System" description "Advanced pipe system for item transportation between containers" pack_format 82

# Core lifecycle hooks
on_load "pipes:init"
on_tick "pipes:tick_main"

# Function tags for vanilla integration
tag function "minecraft:load":
    add "pipes:init"

tag function "minecraft:tick":
    add "pipes:tick_main"

# Item tags for pipe system
tag item "pipes:pipe_items":
    add "minecraft:iron_ingot"
    add "minecraft:diamond"
    add "minecraft:gold_ingot"
    add "minecraft:emerald"

# Block tags for containers
tag block "pipes:containers":
    add "minecraft:chest"
    add "minecraft:barrel"
    add "minecraft:hopper"
    add "minecraft:dropper"
    add "minecraft:dispenser"
    add "minecraft:shulker_box"
    add "minecraft:trapped_chest"

# Function tags for pipe system commands
tag function "pipes:commands":
    add "pipes:help"
    add "pipes:create_source"
    add "pipes:create_sink"
    add "pipes:set_flow_rate"
    add "pipes:list_connections"
    add "pipes:clear_all"
    add "pipes:demo_mode"
    add "pipes:ping"

# Function tags for configuration commands
tag function "pipes:config_commands":
    add "pipes:config_help"
    add "pipes:set_token_speed"
    add "pipes:set_max_distance"
    add "pipes:toggle_auto_extract"
    add "pipes:toggle_debug"
    add "pipes:toggle_energy"
    add "pipes:toggle_redstone"
    add "pipes:toggle_priority"
    add "pipes:show_config"
    add "pipes:apply_config"
    add "pipes:reset_config"
    add "pipes:optimize_performance"
    add "pipes:high_performance"
    add "pipes:low_performance"

# Function tags for advanced commands
tag function "pipes:advanced_commands":
    add "pipes:advanced_help"
    add "pipes:set_source_filter"
    add "pipes:set_sink_filter"
    add "pipes:set_redstone_control"
    add "pipes:set_priority"
    add "pipes:recharge_energy"
    add "pipes:spawn_diamond_token"
    add "pipes:spawn_gold_token"
    add "pipes:spawn_emerald_token"
    add "pipes:create_smart_source"
    add "pipes:create_smart_sink"
    add "pipes:check_energy_level"
    add "pipes:auto_recharge"

# Function tags for demo commands
tag function "pipes:demo_commands":
    add "pipes:demo_basic_pipe"
    add "pipes:demo_advanced_pipe"
    add "pipes:demo_redstone_control"
    add "pipes:demo_energy_system"
    add "pipes:demo_priority_system"
    add "pipes:demo_performance_modes"
    add "pipes:demo_debug_mode"
    add "pipes:demo_item_types"
    add "pipes:demo_conditional_example"
    add "pipes:demo_complete_system"
    add "pipes:demo_help"
    add "pipes:quick_start"
    add "pipes:quick_advanced"
    add "pipes:troubleshoot"

# Function tags for debug commands
tag function "pipes:debug_commands":
    add "pipes:debug_log"
    add "pipes:debug_show_entities"

# Function tags for legacy compatibility
tag function "pipes:legacy_commands":
    add "pipes:source_here"
    add "pipes:sink_here"
    add "pipes:give_wrench"
